---
import '../styles/global.css';
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// Full Astro Component Syntax:
// https://docs.astro.build/basics/astro-components/

const books = await getCollection('books');
//no funciona el autocomletado de astro ni muestra el tipo ni la estructura del objeto
//tampoco la sugerencia, ni el valor 
//solucion! en tsconfig.json agregar: 
//	"compilerOptions": {
//		"strictNullChecks": true
//	}

export const prerender = true;
---

<Layout title="DevBooks - Home">
	<main>
		<h1 class="text-center text-7xl font-extrabold mb-24">Dev üë®üèº‚Äçüíª
			<span class="block">Books</span>
		</h1>

	<section aria-label="Libros recomendados para programadores">
		<div class="px-4 mx-auto max-w-screen-xl">
			<div class="grid gap-6 md:grid-cols-2">
				{
					books.map(book => {
						const { slug, data } = book;
						const { title, author, img, readtime, description, buy } = data;

						return (
							<article class="flex">
								<a href={`/libro/${slug}`} class="mb-2 xl:mb-0 transition hover:scale-110">
									<img 
										// transicon de la imagen d una pagina a otra
										transition:name={`img-${slug}`}
										class="mr-5 w-48 rounded" 
										src={`/${img}`} 
										alt={title} 
									/>
								</a>

								<div class="flex flex-col justify-center">
									<h2 transition:name={`title-${slug}`} class="mb-2 text-2xl font-bold leading-tight text-white">
										{title}
									</h2>

									<p class="mb-4 text-gray-300 max-w-sm">
										{description}
									</p>
									<span class="text-xs">
										‚è≥Lectura en {readtime} min
									</span>
								</div>
							</article>
						)
					})
				}
			</div>
		</div>
	</section>
</Layout>

